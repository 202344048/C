#include <stdio.h>
int main(void)
{
  int price, change, money;
  int c1000, c500, c100;

  printf("물건 값을 입력해라\n ");
  scanf("%d", &price);
  printf("투입한 금액을 입력해라\n ");
  scanf("%d", &money);
  printf("거스름돈은 다음과 같습니다\n");

  change = money - price;

  c1000 = change/1000;
  c500 = change/500;
  c100 = change/100;

  printf("천원권 : %d장\n", c1000);
  printf("오백원권 : %d장\n", c500);
  printf("백원권 : %d장\n", c100);
  

  return 0;
}
